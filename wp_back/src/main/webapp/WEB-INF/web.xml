<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
      <!-- RegisterServlet Mapping -->
	 <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.teamup.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
     <!-- LoginServlet Mapping -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.teamup.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <!-- ApplyServlet Mapping -->
    <servlet>
        <servlet-name>ApplyServlet</servlet-name>
        <servlet-class>com.teamup.servlet.ApplyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApplyServlet</servlet-name>
        <url-pattern>/apply</url-pattern>
    </servlet-mapping>
    
    <!-- GetTeamsByClassNameServlet Mapping -->
    <servlet>
        <servlet-name>GetTeamsByClassNameServlet</servlet-name>
        <servlet-class>com.teamup.servlet.GetTeamsByClassNameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetTeamsByClassNameServlet</servlet-name>
        <url-pattern>/getTeams</url-pattern>
    </servlet-mapping>

	<!-- CreateTeamServlet Mapping -->
    <servlet>
        <servlet-name>CreateTeamServlet</servlet-name>
        <servlet-class>com.teamup.servlet.CreateTeamServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateTeamServlet</servlet-name>
        <url-pattern>/createTeam</url-pattern>
    </servlet-mapping>
    
    <!-- Pre_MypageServlet Mapping -->
    <servlet>
        <servlet-name>Pre_MypageServlet</servlet-name>
        <servlet-class>com.teamup.servlet.Pre_MypageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Pre_MypageServlet</servlet-name>
        <url-pattern>/preMypage</url-pattern>
    </servlet-mapping>
    
    <!-- ApplyServlet Mapping -->
    <servlet>
        <servlet-name>QuitTeamServlet</servlet-name>
        <servlet-class>com.teamup.servlet.QuitTeamServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuitTeamServlet</servlet-name>
        <url-pattern>/quitTeam</url-pattern>
    </servlet-mapping>
    
    <!-- AcceptOrRejectServlet Mapping -->
    <servlet>
        <servlet-name>AcceptOrRejectServlet</servlet-name>
        <servlet-class>com.teamup.servlet.AcceptOrRejectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AcceptOrRejectServlet</servlet-name>
        <url-pattern>/accept_reject</url-pattern>
    </servlet-mapping>
</web-app>